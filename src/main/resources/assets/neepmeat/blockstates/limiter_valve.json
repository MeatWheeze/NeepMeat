{
  "multipart": [
    {
      "when": {
        "facing": "north|south"
      },
      "apply": {
        "model": "neepmeat:block/limiter_valve"
      }
    },
    {
      "when": {
        "facing": "east|west"
      },
      "apply": {
        "model": "neepmeat:block/limiter_valve",
        "y": 90
      }
    },
    {
      "when": {
        "facing": "up|down"
      },
      "apply": {
        "model": "neepmeat:block/limiter_valve",
        "x": 90
      }
    },
    {
      "apply": {
        "model": "neepmeat:block/rusty_pipe/pipe_sides"
      }
    }
  ]
}