{
  "multipart": [
    {
      "when": {
        "facing": "north|south"
      },
      "apply": {
        "model": "neepmeat:block/filter_pipe",
        "x": 0,
        "y": 0
      }
    },
    {
      "when": {
        "facing": "east|west"
      },
      "apply": {
        "model": "neepmeat:block/filter_pipe",
        "y": 90
      }
    },
    {
      "when": {
        "facing": "up|down"
      },
      "apply": {
        "model": "neepmeat:block/filter_pipe",
        "x": -90,
        "y": 0
      }
    },

    {
      "apply": {
        "model": "neepmeat:block/rusty_pipe/pipe_sides"
      }
    }
  ]
}